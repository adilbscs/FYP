@model List<SwiftFoodie.Models.VmOrders>
@using System.Web.Configuration
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="layout-content-body">
    <div class="title-bar">
        
        <h1 class="title-bar-title">
            <span class="d-ib">Dashboard - Recent Orders</span>
        </h1>
    </div>
    <div class="row gutter-xs">

        @if (Model.Count() > 0)
        {
            foreach (var c in Model) // Print the list
            {
                <div class="col-xs-6 col-md-3">
                    <div class="pricing-card">
                        <div class="pricing-card-header bg-default">
                            <h4 class="m-y-sm">@c.Customer</h4>
                        </div>
                        <div class="pricing-card-body">
                            <h2 class="pricing-card-price">
                                <span class="pricing-card-currency">@c.Item</span>
                            </h2>
                            <ul class="pricing-card-details">

                                <li>@c.Phone</li>

                            </ul>
                            <label class="custom-control custom-control-default custom-radio">
                                <span class="custom-control-label"><a href="@Url.Action("cancelorder","orders")/@c.OrderId" class="btn btn-outline-danger btn-thick btn-pill" type="button">Cancel</a></span>

                            </label>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card mt-5">
                <div class="card-body text-center">
                    <div class="alert alert-fill-danger text-danger" role="alert">
                        <i class="icon icon-exclamation-circle"></i>
                        No Recent Order Found
                    </div>
                </div>
            </div>
        }

    </div>
</div>
