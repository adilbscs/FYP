@model IEnumerable<SwiftFoodie.Models.Menu>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="layout-content-body">
    <div class="title-bar">
        <h1 class="title-bar-title">
            <span class="d-ib">In Active Menu Items</span>
        </h1>
    </div>
    <div class="row gutter-xs">

        @if (Model.Count() > 0)
        {
            foreach (var c in Model) // Print the list
            {
                <div class="col-xs-6 col-md-3">
                    <div class="pricing-card">
                        <div class="pricing-card-header bg-default">
                            <h4 class="m-y-sm">@c.ItemName</h4>
                        </div>
                        <div class="pricing-card-body">
                            <h2 class="pricing-card-price">
                                <span class="pricing-card-currency">PKR</span>@c.ItemPrice
                            </h2>
                            <ul class="pricing-card-details">

                                <li>@c.ItemCategory</li>

                            </ul>
                            <label class="custom-control custom-control-default custom-radio">
                                <span class="custom-control-label"><a href="@Url.Action("active","menu")/@c.MenuID" class="btn btn-outline-success btn-thick btn-pill" type="button">Active</a></span>

                            </label>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card mt-5">
                <div class="card-body text-center">
                    <div class="alert alert-fill-danger text-danger" role="alert">
                        <i class="icon icon-exclamation-circle"></i>
                        Sorry, Nothing Found
                    </div>
                </div>
            </div>
        }
    </div>

</div>

