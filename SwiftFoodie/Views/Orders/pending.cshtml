@model List<SwiftFoodie.Models.VmOrders>
@using System.Web.Configuration
<div class="layout-content-body">
    <div class="text-center m-b">
        <h3 class="m-b-0">All Pending Orders</h3>
       
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="panel">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="demo-dynamic-tables-2" class="table table-middle nowrap">
                            <thead>
                                <tr>
                                    <th>
                                        <label class="custom-control custom-control-primary custom-checkbox">
                                            <input class="custom-control-input" type="checkbox">
                                            <span class="custom-control-indicator"></span>
                                        </label>
                                    </th>
                                    <th>Customer</th>
                                    <th>Items</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                               
                                @foreach (var o in Model)
                                {
                                <tr>
                                    <td>
                                        <label class="custom-control custom-control-primary custom-checkbox">
                                            <input class="custom-control-input" type="checkbox">
                                            <span class="custom-control-indicator"></span>
                                        </label>
                                    </td>
                                    <td data-order="@o.Customer">
                                        <span class="icon-with-child m-r">
                                            <img class="circle" width="36" height="36" src="https://scontent.fkhi5-1.fna.fbcdn.net/v/t1.0-9/26113789_1530749627038137_3375218903975002823_n.jpg?_nc_cat=103&_nc_ht=scontent.fkhi5-1.fna&oh=b44fa13e53009e6c9b421d7d6ea1e237&oe=5D30DABA" alt="Jessica Brown">
                                            <span class="icon-child bg-warning circle sq-8"></span>
                                        </span>
                                        <strong>@o.Customer</strong>
                                    </td>
                                    <td class="maw-320">
                                        <span class="truncate">@o.Item</span>
                                    </td>
                                    <td>@o.Address</td>
                                    <td>@o.Phone</td>
                                    <td >
                                        <span class="label label-info label-pill">@o.Date</span>
                                    </td>
                                    <td>
                                        <div class="btn-group pull-right dropdown">
                                            <button class="btn btn-link link-muted" aria-haspopup="true" data-toggle="dropdown" type="button">
                                                <span class="icon icon-ellipsis-h icon-lg icon-fw"></span>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-right">
                                                <li><a href="#">Assigned to Rider</a></li>
                                                <li><a href="@Url.Action("cancelorder","orders")/@o.OrderId">Cancel Order</a></li>
                                                
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

