@using System.Web.Configuration
@model IEnumerable<SwiftFoodie.Models.Restaurants>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section styles{
    <link rel="stylesheet" href="@WebConfigurationManager.AppSettings["Theme"]css/vendor.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,400italic,500,700">
    <link rel="stylesheet" href="@WebConfigurationManager.AppSettings["Theme"]css/vendor.min.css">
    <link rel="stylesheet" href="@WebConfigurationManager.AppSettings["Theme"]css/elephant.min.css">
    <link rel="stylesheet" href="@WebConfigurationManager.AppSettings["Theme"]css/application.min.css">
    <link rel="stylesheet" href="@WebConfigurationManager.AppSettings["Theme"]css/demo.min.css">
}

<div class="layout-content-body">
    <div class="title-bar">
        <h1 class="title-bar-title">
            <span class="d-ib">Restaurants List</span>
            
        </h1>
    </div>
    
   
    <div class="row gutter-xs">
        @if (Model.Count() > 0)
        {
            foreach (var c in Model) // Print the list
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <div class="media">
                                <div class="media-middle media-body">
                                    <a class="link-muted" href="#">
                                        <strong>@c.OwnerName</strong>
                                    </a>

                                    <a class="link-muted" href="#">
                                        <strong>@c.PhoneNumber</strong>
                                    </a>
                                    <span class="badge badge-@(c.IsActive==false?"danger":"")  pull-right"> In-Active</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-image">
                            <a class="card-link" href="#">
                                <img class="img-responsive" src="@WebConfigurationManager.AppSettings["Theme"]img/8160313374.jpg" alt="Restaurant Magnifique">
                            </a>
                        </div>

                        <div class="card-body">
                            <h4 class="card-title text-center">@c.RestaurantName</h4>
                            <p class="card-text text-center">
                                <small>@c.CompleteAddress</small>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="edit/@c.RestaurantID" class="btn btn-default" type="button">Update</a>
                            @if (c.IsActive == true)
                            {
                                <a href="deleteconfirm/@c.RestaurantID" class="btn btn-danger pull-lg-right" type="button">Delete</a>
                            }
                            else
                            {
                                <a href="doactive/@c.RestaurantID" class="btn btn-success pull-lg-right" type="button">Do Active</a>

                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card mt-5">
                <div class="card-body text-center">
                    <div class="alert alert-fill-danger text-danger" role="alert">
                        <i class="icon icon-exclamation-circle"></i>
                        Sorry, Nothing Found
                    </div>
                </div>
            </div>
        }

    </div>
</div>
@section scripts{
    <script src="@WebConfigurationManager.AppSettings["Theme"]js/vendor.min.js"></script>
    <script src="@WebConfigurationManager.AppSettings["Theme"]js/elephant.min.js"></script>
    <script src="@WebConfigurationManager.AppSettings["Theme"]js/application.min.js"></script>
    <script src="@WebConfigurationManager.AppSettings["Theme"]js/demo.min.js"></script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
        ga('create', 'UA-83990101-1', 'auto');
        ga('send', 'pageview');
    </script>
}